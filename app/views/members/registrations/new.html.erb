<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table class="table">
    <tr>
      <td>名前</td>
      <td>(姓)</td>
      <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
      <td>(名)</td>
      <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>(セイ)</td>
      <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
      <td>(メイ)</td>
      <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>住所</td>
      <td></td>
      <td colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-xs-10" %></td>
    </tr>
    <tr>
      <td>電話番号(ハイフンなし)</td>
      <td></td>
      <td><%= f.text_field :telephone, autofocus: true, autocomplete: "telephone" %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>パスワード(6文字以上)</td>
      <td></td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>パスワード(確認用)</td>
      <td></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      <td></td>
      <td></td>
    </tr>
  </table>

  <%= f.submit "新規登録", class: "btn btn-default" %>

<% end %>

<h2>既に登録済みの方</h2>

<strong><%= link_to "こちら", new_session_path(resource_name) %></strong>　からログインしてください。

