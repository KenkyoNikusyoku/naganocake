<h1>商品一覧</h1>

<%= link_to '', new_admin_product_path, class: "btn btn-default btn-circle btn-lg glyphicon glyphicon-plus" %>
<table class="table">
    <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
    </tr>
    <% @products.each do |product| %>
     <tr>
     <td> <%= product.id %> </td>
     <td> <%= product.name %> </td>
     <td> <%= product.price %> </td>
     <td> <%= product.genre.name %> </td>
     <td>  </td>
    
     </tr>
    <% end %>
    
</table>