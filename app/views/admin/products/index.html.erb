<div class="col-xs-2"></div>

<div class="col-xs-8">
    <h2>商品一覧</h2>
    <div class="text-right">
        <%= link_to '＋', new_admin_product_path, class: "btn btn-default btn-lg rounded-circle p-0 btn-plus" %>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
            </tr>
        </thead>

        <tbody>
            <% @products.each do |product| %>
            <tr>
                 <td> <%= product.id %> </td>
                 <td> <%= link_to admin_product_path(product), class: "btn-link" do %>
                        <%= product.name %>
                    <% end %></td>
                 <td> <%= product.price %>円 </td>
                 <td> <%= product.genre.name %> </td>
                 <td>
                     <% if product.is_valid == true %>
                        販売中
                    <% else %>
                        販売停止中
                    <% end %>
                 </td>
             </tr>
            <% end %>
        </tbody>
    </table>
</div>

<div class="col-xs-2"></div>

  <div class="row">
    <div class="col-xs-5">
  </div>
  <div class="col-xs-6">
     <%= paginate @products %>
    </div>
  </div>
