<%= render 'layouts/error.message', model: @product %>
<div class="row">
    <%= form_for @product, url: admin_product_path, method: :patch, class: "form-control" do |f| %>
            <h1>商品編集</h1>
        <div class="col-xs-4">
            <%= attachment_image_tag @product, :image, size: '300x240', fallback:"no_image.jpg",size:'300x240' %>
            <br><br><br>
            <%= f.attachment_field :image, class: "image" %>
        </div>
        <div class="col-xs-7 col-offset-1">
            <table class="table">

            <tr>
             <th>商品名</th>
              <td> <%= f.text_field :name, class:"form-control" %> </td>
              <td></td>
            </tr>
            <tr>
                <th>商品説明</th>
                <td> <%= f.text_area :introduction, class:"form-control" %> </td>
                <td></td>
            </tr>
            <tr>
                <th>商品ジャンル</th>
                <td> <%= f.collection_select :genre_id, Genre.all, :id, :name %> </td>
                <td></td>
            </tr>
            <tr>
                <th>税抜価格</th>
                <td><%= f.number_field :price, class:"form-horizontal" %>円</td>
                <td></td>
            </tr>
            <tr>
                <th>販売ステータス</th>
                <td> 販売中 <%= f.radio_button :is_valid, true %>  </td>
                <td> 売り切れ <%= f.radio_button :is_valid, false %>  </td>
            </tr>
            </table>
            <br>
            <%= f.submit '変更を保存', class: "btn btn-primary pull-right" %> 
        
        </div>
    <% end %>
</div>



