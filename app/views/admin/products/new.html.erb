<h1>商品新規登録</h1>

<%= form_for @product, url: admin_products_path, method: :post, class: "form-control" do |f| %>
 
<#%= f.attachment_field :image, class: "image" %>

   <h4>title</h4>
   <%= f.text_field :name, class:"form-control" %>

   <h4>商品説明</4>
   <%= f.text_area :introduction, class:"form-control" %>

   <h4>商品ジャンル</h4>
   <%= f.collection_select :genre_id, Genre.all, :id, :name %>

   <h4>税抜価格</h4>
   <%= f.text_field :price, class:"form-control" %>円
   
   <h4>販売ステータス</h4>
   有効 <%= f.radio_button :is_valid, true %> 
   無効 <%= f.radio_button :is_valid, false %> 

   <%= f.submit "新規登録", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>