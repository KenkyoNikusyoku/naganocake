<h1>ジャンル一覧</h1>

    <%= form_for(@genre, url:admin_genres_path) do |f| %>

      <div class="form-group">
         <p>ジャンル追加</p>
         <%= f.text_field :name %>
         有効 <%= f.radio_button :is_valid, true %>
         無効 <%= f.radio_button :is_valid, false %> 
         <%= f.submit '追加', class:"btn btn-info btn-md" %>
      </div>
<% end %>

    <table class="table">
        <tr>
           <th>商品ID</th>
           <th></th>
        </tr>
        <% @genres.each do |genre| %>
            <tr>
                <td> <%= genre.name %> </td>

                <% if genre.is_valid == true %>
                <td> 有効 </td>
                <% else %>
                <td> 無効 </td>
                <% end %>
                <td> <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary btn-sm" %></td>
            </tr>
        <% end %>
    
    </table>

