    <div class="col-xs-2">
        <h2>ジャンル検索</h2>
    </div>

        <div class="col-xs-10">

          <h3>商品一覧<span>（全<%= @quantity %>件）</span></h3>

          <% @products.each do |product| %>

            <div class="col-xs-3 text-center ">

              <%= link_to product_path(product) do %>

                <%= attachment_image_tag product, :image, :fill, 60, 60, fallback: "no_image.jpg" %>

                <% end %><br>

                <p><%= product.name %></p>

                <p><% if product.is_valid == true %>
                    <%= product.price %>円</p>

                <% end %>

                <% if product.is_valid == true %>
                    販売中

                <% else %>
                    売切れ
                <% end %>

            </div>
          <% end %>
        </div>


  <div class="row">
    <div class="col-xs-6">
  </div>
  <div class="col-xs-6">
     <%= paginate @products %>
    </div>
  </div>
