
<div class="container">
<div class="row">
    <div class="col-xs-3">
    </div>
    <div class="col-xs-3">
    <p> <%= attachment_image_tag(@product, :image, size: "300x300") %></p>
    <p> <%= @product.name %> </p>
    <p> <%= @product.introduction %> </p>
    <p> <%= @product.genre.name %> </p>
    <p> <%= number_to_currency(@product.price*1.1, :format => "%u%n", :unit => "￥", :precision => 0) %> </p>
    



    <%= form_for(@cart_product, url: cart_products_path) do |f| %>
        　<%= f.hidden_field :product_id, value: @product.id %>
        　<%= f.number_field :quantity, placeholder: "個数選択",class: 'btn btn-default',min: 1 %>
        　<%= f.submit 'カートにいれる',class: 'btn btn-primary' %>
        <% end %>






    </div>
</div>
</div>